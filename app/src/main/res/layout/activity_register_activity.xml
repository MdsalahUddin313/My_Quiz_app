<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_register"
    tools:context=".Authintication.Register_activity">
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/register_progressbar_id"
        android:visibility="visible"
        android:layout_centerInParent="true"
        ></ProgressBar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="120dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SIGN UP"
                android:textSize="45dp"
                android:id="@+id/title_id"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:textColor="#0c4c66"
                ></TextView>

            <EditText
                android:layout_below="@+id/title_id"
                android:id="@+id/edittext_name_id"
                android:layout_width="match_parent"
                android:elevation="10dp"
                android:layout_height="45dp"
                android:drawableStart="@drawable/ic_person"
                android:drawablePadding="5dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="45dp"
                android:background="@drawable/edit_text_roundedshape"
                android:hint="Name"
                android:paddingLeft="15dp"
                android:drawableLeft="@drawable/ic_person"></EditText>

            <EditText
                android:elevation="10dp"
                android:id="@+id/edittext_email_id"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_below="@+id/edittext_name_id"
                android:layout_marginTop="40dp"
                android:background="@drawable/edit_text_roundedshape"
                android:hint="email"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/ic_mail"
                android:paddingLeft="15dp"
                android:drawableLeft="@drawable/ic_mail"></EditText>

            <EditText
                android:elevation="10dp"
                android:id="@+id/edittext_password_id"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_below="@+id/edittext_email_id"
                android:layout_marginTop="40dp"
                android:background="@drawable/edit_text_roundedshape"
                android:hint="password"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/ic_lock_black_24dp"
                android:paddingLeft="15dp"
                android:drawableLeft="@drawable/ic_lock_black_24dp"></EditText>

            <EditText
                android:elevation="10dp"
                android:id="@+id/edittext_mobile_id"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_below="@+id/edittext_password_id"
                android:layout_marginTop="40dp"
                android:background="@drawable/edit_text_roundedshape"
                android:hint="Mobile Number"
                android:drawableStart="@drawable/ic_phone"
                android:inputType="numberDecimal"
                android:paddingLeft="15dp"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/ic_phone"></EditText>

            <Button
                android:id="@+id/submit_button_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:layout_below="@+id/edittext_mobile_id"
                android:background="@drawable/button_rounded"
                android:text="Submit"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"

                android:textColor="@android:color/white"></Button>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/submit_button_id"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/text_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign up Done?"

                    ></TextView>

                <TextView
                    android:id="@+id/login_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/text_two"
                    android:paddingLeft="15dp"
                    android:text="Log in"
                    android:textColor="@android:color/holo_red_light"></TextView>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>