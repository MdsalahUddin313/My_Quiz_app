<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/NoAction_bar"
    tools:context=".Login_part.RegisterActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/title_toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="start"
        android:paddingTop="15dp"
        android:textAlignment="textStart"
        app:titleTextColor="@color/colorAccent"
        tools:ignore="MissingConstraints"></androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp">

        <androidx.cardview.widget.CardView
            android:layout_width="390dp"
            android:layout_height="610dp"
            android:layout_gravity="center"
            app:cardElevation="5dp"
            android:layout_marginTop="200dp"
            android:layout_marginBottom="220dp"
            android:background="@color/colorAccent"
            android:elevation="5dp"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:gravity="center_horizontal"
                    android:text="Create an account"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/fullNameId"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="20dp"
                    android:background="#f0eff4"
                    android:gravity="center_vertical"
                    android:hint="Full name"
                    android:paddingLeft="15dp" />


                <EditText
                    android:id="@+id/mobileId"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="25dp"
                    android:background="#f0eff4"
                    android:gravity="center_vertical"
                    android:hint="Mobile"
                    android:paddingLeft="15dp" />

                <EditText
                    android:id="@+id/emailId"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="25dp"
                    android:background="#f0eff4"
                    android:gravity="center_vertical"
                    android:hint="Email"
                    android:paddingLeft="15dp" />


                <EditText
                    android:id="@+id/streetId"
                    android:layout_width="300dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="25dp"
                    android:background="#f0eff4"
                    android:gravity="center_vertical"
                    android:hint="Street address"
                    android:paddingLeft="15dp" />




                <EditText
                    android:id="@+id/passwordId"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="25dp"
                    android:background="#f0eff4"
                    android:gravity="center_vertical"
                    android:hint="password"
                    android:paddingLeft="15dp" />


                <EditText
                    android:id="@+id/confirmPassId"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="25dp"
                    android:background="#f0eff4"
                    android:gravity="center_vertical"
                    android:hint="Confirm password"
                    android:paddingLeft="15dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:orientation="horizontal">

                <CheckBox
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="460dp"
                    android:gravity="center_vertical"
                    android:text="I agree the" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView

                    android:id="@+id/register_text"
                    android:layout_width="360dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="146dp"
                    android:layout_marginTop="519dp"
                    android:text="terms of conditions"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/register_Pager_signUp_Btn"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="555dp"
                    android:background="@color/colorPrimaryDark"
                    android:fontFamily="monospace"
                    android:text="Sign Up"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>